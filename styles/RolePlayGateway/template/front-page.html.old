<div class="forabg">
	<div class="inner"><span class="corners-top"><span></span></span>
	<ul class="topiclist">
		<li class="header">
			<dl class="icon">
				<dt>Settings</dt>
				<dd class="topics">Posts</dd>
				<dd class="posts">Characters</dd>
				<dd class="lastpost"><span>Last Activity</span></dd>
			</dl>
		</li>
	</ul>
	<ul class="topiclist forums">
		<!-- BEGIN places -->
		<li class="row bg1 icon roleplay" style="clear:left; padding-bottom: 0.5em;">
			<a href="/roleplay/{places.ROLEPLAY_URL}/places/{places.URL}/"><img src="/roleplay/{places.ROLEPLAY_URL}/places/{places.URL}/image" alt="{places.NAME}" class="crisp-border roleplay-image" /></a>
			<div>
				<h3 class="simple">
					<div style="float:right;">
						{places.POSTS} posts &middot;
						{places.CHARACTER_COUNT} characters present &middot;
						<span style="width: 25%;">
							Last Activity <a href="/roleplay/{places.ROLEPLAY_URL}/places/{places.URL}/#roleplay{places.LAST_POST_ID}">{places.LAST_POST_DATE} &raquo;</a>
						</span>
					</div>
					<!-- IF places.PARENT_ID gt 0 -->
					<small style="display:block;">
						<a href="/roleplay/{places.ROLEPLAY_URL}/places/{places.PARENT_SLUG}/">{places.PARENT_NAME}</a>
					</small>
					&#8618;
					<!-- ENDIF -->
					<!-- <small># {places.ID}</small> -->
					<a href="/roleplay/{places.ROLEPLAY_URL}/places/{places.URL}/">{places.NAME}</a>
					<small><strong>Owner: {places.OWNER_USERNAME}</strong></small>
					<small><strong>Roleplay: <a href="/roleplays/{places.ROLEPLAY_URL}">{places.ROLEPLAY_NAME}</a></strong></small>
					
				</h3>
			</div>
			
			<a class="right floated button" href="/roleplay/{places.ROLEPLAY_URL}/places/{places.URL}/#roleplay{places.LAST_POST_ID}">Read the Latest</a>
			<p>{places.SYNOPSIS}</p>
		</li>
		<!-- END places -->
	</ul>
	<span class="corners-bottom"><span></span></span></div>
</div>

<div class="forabg">
	<div class="inner"><span class="corners-top"><span></span></span>
	<ul class="topiclist">
		<li class="header">
			<dl class="icon">
				<dt><a href="/roleplay">Newest Worlds</a></dt>
				<dd class="lastpost"><a href="/roleplay">Browse All</a></dd>
			</dl>
		</li>
	</ul>
	<ul class="topiclist forums">
		<!-- BEGIN roleplays -->
		<li class="row bg1 icon roleplay" style="clear:left; padding-bottom: 0.5em;">
			<a href="/roleplay/{roleplays.URL}"><img src="/roleplay/{roleplays.URL}/image" class="crisp-border roleplay-image" style="float:left;" /></a>
			<dt style="padding-bottom:5px;">
				<div>
					<!-- IF roleplays.S_CAN_EDIT -->
					<div id="controls" style="float:right;">
						<a href="/ucp.php?i=roleplays&mode=edit&id={roleplays.ID}">Edit</a>
					</div>
					<!-- ENDIF -->
					<a href="/roleplay/{roleplays.URL}" class="topictitle">{roleplays.TITLE}</a> <span class="author">by {roleplays.OWNER_USERNAME}</span>
					<p class="roleplay-description">{roleplays.DESCRIPTION}</p>
					<span class="tags"><strong>Tags:</strong> {roleplays.TAGS} (<a href="//www.roleplaygateway.com/ucp.php?i=roleplays&mode=add_tag&id={roleplays.ID}">Add Tags &raquo;</a>)</span>
				</div>
			</dt>
			<!-- <dd>{roleplays.LAST_ACTIVITY}</dd> -->
		</li>
		<!-- END roleplays -->
	</ul>
	<span class="corners-bottom"><span></span></span></div>
</div>

